<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>New NAP</h3>
        </div>
        <div class="card-body">
            <form action="/nap/new-nap" method="POST">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Title" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="origin" class="form-control" placeholder="Origin" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="position" class="form-control" placeholder="Position" autofocus>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">
                        Save
                    </button>
                </div>
            </form>
        </div>

    </div>
</div>